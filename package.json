{
  "name": "@activade/droid-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Factory Droid CLI",
  "type": "module",
  "workspaces": ["docs"],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun run build:types && bun run build:js",
    "build:js": "bun build ./src/index.ts ./src/cli/index.ts --outdir ./dist --target node --splitting",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "bun test && bun run typecheck && bun run lint",
    "typecheck": "tsc --noEmit",
    "test:watch": "bun test --watch",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "format": "bunx biome format --write .",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run lint && bun run test && bun run build",
    "docs:dev": "cd docs && bun run start",
    "docs:build": "cd docs && bun run build",
    "docs:deploy": "cd docs && bun run deploy"
  },
  "keywords": [
    "factory",
    "droid",
    "ai",
    "cli",
    "sdk",
    "node",
    "bun",
    "typescript",
    "codex",
    "agent"
  ],
  "author": "Activade",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/activadee/droid-sdk"
  },
  "bugs": {
    "url": "https://github.com/activadee/droid-sdk/issues"
  },
  "homepage": "https://github.com/activadee/droid-sdk#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "typescript": "^5.7.0",
    "zod": "^4.2.1"
  }
}
